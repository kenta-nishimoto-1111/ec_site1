<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published on</th>
      <th>Showing</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_on %></td>
        <td><%= book.showing %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', product_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if session[:cart_id] %>
  <%= link_to '買い物かごを見る', cart_path(session[:cart_id]) %>
<% end %>